<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pageRoot">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/headerImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorPrimary"/>

        <com.lollipop.iconcore.ui.IconImageView
            android:layout_width="0px"
            android:layout_height="@dimen/preview_icon_size"
            app:layout_constraintTop_toTopOf="@id/headerImageView"
            app:layout_constraintLeft_toLeftOf="@id/headerImageView"
            app:layout_constraintRight_toLeftOf="@id/previewIcon2"
            app:layout_constraintBottom_toBottomOf="@id/headerImageView"
            app:layout_constraintDimensionRatio="1:1"
            android:id="@+id/previewIcon1"/>

        <com.lollipop.iconcore.ui.IconImageView
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/previewIcon1"
            app:layout_constraintLeft_toRightOf="@id/previewIcon1"
            app:layout_constraintBottom_toBottomOf="@id/previewIcon1"
            app:layout_constraintRight_toLeftOf="@id/previewIcon3"
            android:id="@+id/previewIcon2"/>

        <com.lollipop.iconcore.ui.IconImageView
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/previewIcon2"
            app:layout_constraintLeft_toRightOf="@id/previewIcon2"
            app:layout_constraintBottom_toBottomOf="@id/previewIcon2"
            app:layout_constraintRight_toLeftOf="@id/previewIcon4"
            android:id="@+id/previewIcon3"/>

        <com.lollipop.iconcore.ui.IconImageView
            android:layout_width="0px"
            android:layout_height="0px"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/previewIcon3"
            app:layout_constraintLeft_toRightOf="@id/previewIcon3"
            app:layout_constraintBottom_toBottomOf="@id/previewIcon3"
            app:layout_constraintRight_toRightOf="@id/headerImageView"
            android:id="@+id/previewIcon4"/>

        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/app_name_size"
            android:layout_marginTop="@dimen/home_space"
            android:text="@string/app_name"
            app:layout_constraintTop_toBottomOf="@id/headerImageView"
            android:layout_marginLeft="@dimen/left_space"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/supportQuantityIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_donut_small_24"
            android:scaleType="fitCenter"
            app:tint="@color/supportQuantityIcon"
            app:layout_constraintTop_toTopOf="@id/supportQuantityText"
            app:layout_constraintBottom_toBottomOf="@id/supportQuantityText"
            app:layout_constraintLeft_toLeftOf="@id/appName"/>

        <TextView
            android:textColor="@color/curtainText"
            android:id="@+id/supportQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:text="@string/support_quantity"
            app:layout_constraintTop_toBottomOf="@id/appName"
            app:layout_constraintLeft_toRightOf="@id/supportQuantityIcon"
            android:layout_marginLeft="@dimen/mini_space"
            android:layout_marginTop="@dimen/home_space"/>

        <TextView
            android:textColor="@color/curtainText"
            android:id="@+id/supportQuantityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            app:layout_constraintTop_toTopOf="@id/supportQuantityText"
            app:layout_constraintBottom_toBottomOf="@id/supportQuantityText"
            app:layout_constraintLeft_toRightOf="@id/supportQuantityText"
            android:layout_marginLeft="@dimen/left_space"/>

        <TextView
            android:textColor="@color/curtainTextSecondary"
            android:id="@+id/supportQuantityHelp"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:textSize="@dimen/summary_size"
            android:text="@string/support_quantity_help"
            app:layout_constraintTop_toBottomOf="@id/supportQuantityText"
            app:layout_constraintLeft_toLeftOf="@id/supportQuantityText"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/right_space"/>

        <ProgressBar
            android:id="@+id/supportQuantityProgress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_marginLeft="@dimen/left_space"
            android:layout_marginRight="@dimen/right_space"
            android:layout_marginTop="@dimen/mini_space"
            android:max="100"
            app:layout_constraintTop_toBottomOf="@id/supportQuantityHelp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progressbar_round"/>

        <Space
            android:id="@+id/contentAnchor"
            android:layout_width="1px"
            android:layout_height="1px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_version_info"
            android:id="@+id/versionBtn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/appName"
            app:layout_constraintTop_toBottomOf="@id/supportQuantityProgress"
            app:layout_constraintRight_toLeftOf="@id/contentAnchor"
            android:layout_marginTop="@dimen/home_space"
            android:layout_marginRight="@dimen/right_space"
            android:paddingTop="@dimen/top_space"
            android:paddingBottom="@dimen/bottom_space">

            <ImageView
                android:id="@+id/versionIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_info_24"
                android:scaleType="fitCenter"
                app:tint="@color/versionIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/left_space"/>

            <TextView
                app:layout_constraintLeft_toRightOf="@id/versionIcon"
                android:layout_marginLeft="@dimen/left_space"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/right_space"
                android:id="@+id/versionTitle"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_size"
                android:textColor="@color/curtainText"/>

            <TextView
                app:layout_constraintLeft_toLeftOf="@id/versionTitle"
                app:layout_constraintTop_toBottomOf="@id/versionTitle"
                app:layout_constraintRight_toRightOf="@id/versionTitle"
                android:layout_marginTop="@dimen/mini_space"
                android:textColor="@color/curtainTextSecondary"
                android:id="@+id/versionSummary"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:textSize="@dimen/summary_size"
                android:text="@string/summary_version"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/newSupportIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_fiber_new_24"
            android:scaleType="fitCenter"
            app:tint="@color/newSupportIcon"
            app:layout_constraintTop_toTopOf="@id/newSupportTitle"
            app:layout_constraintBottom_toBottomOf="@id/newSupportTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/left_space"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newSupportTitle"
            app:layout_constraintTop_toBottomOf="@id/versionBtn"
            app:layout_constraintLeft_toRightOf="@id/newSupportIcon"
            android:layout_marginLeft="@dimen/left_space"
            android:layout_marginRight="@dimen/right_space"
            android:textColor="@color/curtainText"
            android:textSize="@dimen/title_size"
            android:layout_marginTop="@dimen/home_space"
            android:text="@string/new_support"/>

        <TextView
            android:textColor="@color/curtainText"
            android:id="@+id/newSupportCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            app:layout_constraintTop_toTopOf="@id/newSupportTitle"
            app:layout_constraintBottom_toBottomOf="@id/newSupportTitle"
            app:layout_constraintLeft_toRightOf="@id/newSupportTitle"
            android:layout_marginLeft="@dimen/left_space"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/preview_icon_size"
            android:id="@+id/newSupportList"
            app:layout_constraintTop_toBottomOf="@id/newSupportTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/left_space"
            android:paddingRight="@dimen/newIconListRight"
            android:layout_marginTop="@dimen/mini_space"
            android:clipToPadding="false"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/newSupportList"
            app:layout_constraintBottom_toBottomOf="@id/newSupportList"
            app:layout_constraintRight_toRightOf="@id/newSupportList"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:id="@+id/newSupportArrow"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/newIconIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_add_photo_alternate_24"
            android:scaleType="fitCenter"
            app:tint="@color/newIconIcon"
            app:layout_constraintTop_toTopOf="@id/newIconTitle"
            app:layout_constraintBottom_toBottomOf="@id/newIconTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/left_space"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newIconTitle"
            app:layout_constraintTop_toBottomOf="@id/newSupportList"
            app:layout_constraintLeft_toRightOf="@id/newIconIcon"
            android:layout_marginLeft="@dimen/left_space"
            android:layout_marginRight="@dimen/right_space"
            android:textColor="@color/curtainText"
            android:textSize="@dimen/title_size"
            android:layout_marginTop="@dimen/home_space"
            android:text="@string/new_icon"/>

        <TextView
            android:textColor="@color/curtainText"
            android:id="@+id/newIconCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            app:layout_constraintTop_toTopOf="@id/newIconTitle"
            app:layout_constraintBottom_toBottomOf="@id/newIconTitle"
            app:layout_constraintLeft_toRightOf="@id/newIconTitle"
            android:layout_marginLeft="@dimen/left_space"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="@dimen/preview_icon_size"
            android:id="@+id/newIconList"
            app:layout_constraintTop_toBottomOf="@id/newIconTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="@dimen/left_space"
            android:paddingRight="@dimen/newIconListRight"
            android:layout_marginTop="@dimen/mini_space"
            android:clipToPadding="false"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="@id/newIconList"
            app:layout_constraintBottom_toBottomOf="@id/newIconList"
            app:layout_constraintRight_toRightOf="@id/newIconList"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:id="@+id/newIconArrow"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:tint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/linkGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newIconList"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/home_space"
            android:layout_marginBottom="@dimen/home_bottom"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
