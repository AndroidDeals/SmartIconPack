<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:background="@color/dialogBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dialogBackground"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialogGroup"
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="@dimen/dialog_elevation"
        app:cardCornerRadius="@dimen/dialog_corner_radius"
        android:layout_marginStart="@dimen/dialog_margin_left"
        android:layout_marginEnd="@dimen/dialog_margin_right"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        app:cardBackgroundColor="@color/curtainCard"/>

</androidx.constraintlayout.widget.ConstraintLayout>